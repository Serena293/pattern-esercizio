package org.example;

import adapter.DataSource;
import adapter.Info;
import adapter.InfoAdapter;
import adapter.UserData;

import java.time.LocalDate;

public class Main {
    public static void main(String[] args) {
        // Creazione di un oggetto Info usando LocalDate
        Info info = new Info("Giovanni", "Rossi", LocalDate.of(1990, 6, 15)); // Anno 1990, Giugno 15
        DataSource ds = new InfoAdapter(info);

        // Creazione di un oggetto UserData
        UserData user = new UserData("", 0);
        user.getData(ds);

        System.out.println("Nome Completo: " + user.getNomeCompleto());
        System.out.println("Et√†: " + user.getEta());
    }
}
